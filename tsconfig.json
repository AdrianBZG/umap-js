{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "compileOnSave": false,
  "include": ["src"]
}
