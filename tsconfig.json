{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": true,
    "downlevelIteration": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "strictPropertyInitialization": false
  },
  "compileOnSave": false,
  "include": ["src"]
}
